server {
    server_name staging.delivery-help.com.ua;
    listen 443 ssl default_server;
    listen [::]:443 ssl default_server;
    access_log  off;
    autoindex off;
    client_max_body_size 100M;

#    listen 443 ssl http2 default_server;
#    listen [::]:443 ssl http2 default_server;
#    ssl_ciphers EECDH+CHACHA20:EECDH+AES128:RSA+AES128:EECDH+AES256:RSA+AES256:EECDH+3DES:RSA+3DES:!MD5;
#    ssl_certificate /etc/app-ssl/certificate.pem;
#    ssl_certificate_key /etc/app-ssl/private-key.pem;
#    ssl_client_certificate /etc/app-ssl/origin-pull.pem;
#    ssl_verify_client on;

    location /api/ {
        proxy_pass http://backend:8080/api/;
    }

    location /socket.io/ {
        proxy_pass http://backend:8080/socket.io/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "Upgrade";
        proxy_set_header Host $host;
    }

    location / {
        proxy_pass http://frontend:8080/;
    }
}
